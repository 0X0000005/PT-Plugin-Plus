{
  "name": "PTHome",
  "timezoneOffset": "+0800",
  "schema": "NexusPHP",
  "url": "https://pthome.net/",
  "description": "只为成为您的家，快乐下载，分享至美！",
  "icon": "https://pthome.net/favicon.ico",
  "tags": ["综合", "影视", "游戏"],
  "host": "pthome.net",
  "selectors": {
      "userExtendInfo": {
          "page": "/userdetails.php?id=$user.id$",
          "merge": true,
          "fields": {
            "bonus2": {
              "selector": ["td.rowhead:contains('做种积分') + td"],
              "filters": [
                "query.text().match(/(.*?)本月：/g)",
                "(query && query.length>0) ? query[0].replace('（本月：', '').trim() : 0",
                "(query != 0) ? parseFloat(query) : 0"
            ]
            }
          }
      }
  },
  "searchEntryConfig": {
    "fieldSelector": {
      "progress": {
        "selector": ["td:not(.rowfollow):not(.colhead):not(.embedded)"],
        "filters": ["query.text()=='-'?null:query.text()"]
      },
      "status": {
        "selector": [".torrents-progress"],
        "switchFilters": [
          ["query.attr('style').indexOf('100%')!=-1?255:3"]
        ]
      }
    }
  },
  "collaborator": "waldens"
}